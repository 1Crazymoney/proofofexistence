{
  "name": "poe",
  "version": "1.10.0-dev",
  "description": "Web application to prove the existence of files using the bitcoin blockchain.",
  "main": "lib/server.js",
  "scripts": {
    "build": "npm run build:modernizr && ./scripts/vendor.sh",
    "build:modernizr": "modernizr --config modernizr-config.json --dest public/vendor/modernizr.js",
    "clean": "npm run clean:vendor",
    "clean:vendor": "rm -Rf assets/vendor && rm -Rf public/vendor",
    "install:paper": "git clone --depth 1 https://github.com/creativetimofficial/paper-dashboard.git assets/vendor/paper-dashboard",
    "install:vendor": "npm run install:paper",
    "postinstall": "npm run clean:vendor && npm run install:vendor",
    "serve": "npm run start",
    "setup": "node lib/setup.js",
    "start": "node lib/server.js",
    "sweep": "node lib/sweep.js",
    "test": "mocha --timeout 10000 && standard 'lib/**/*.js'",
    "watch": "nodemon -e js,hbs --exec npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poexio/proofofexistence.git"
  },
  "author": "PoEx Co., Ltd",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "animate.css": "^3.5.2",
    "bitcoin-convert": "^1.0.4",
    "bitcore": "^0.13.3",
    "bitcore-explorers": "^0.12.0",
    "blockcypher": "^0.2.0",
    "bluebird": "^2.10.0",
    "body-parser": "^1.13.3",
    "bootstrap": "^3.3.7",
    "bootstrap-notify": "^3.1.3",
    "browser-request": "^0.3.3",
    "clipboard": "^1.7.1",
    "config": "^1.29.0",
    "dotenv": "^4.0.0",
    "express": "^4.13.3",
    "hbs": "^4.0.1",
    "jquery": "^1.12.4",
    "jquery-form": "^3.50.0",
    "level": "^2.0.0",
    "lodash": "^3.10.1",
    "modernizr": "^3.5.0",
    "moment": "^2.18.1",
    "nodemailer": "^4.4.0",
    "openpgp": "^1.3.0",
    "popsicle": "^1.1.0",
    "prompt": "^0.2.14",
    "qrcodejs": "^1.0.0",
    "react": "^0.13.3",
    "sprintf-js": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^4.0.1",
    "nock": "^9.1.5",
    "nodemon": "^1.12.0",
    "standard": "^10.0.3",
    "vinyl-source-stream": "^1.1.0"
  }
}
