{{#extend "scripts"}}
  <script type="text/javascript" src="/js/controllers/index.js"></script>
{{/extend}}

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="content">
          <div class="row">
            <div class="col-lg-12">
              <h3>
                Select a document and have it certified in the Bitcoin blockchain
                <small>
                  <a href="" data-toggle="modal" data-target="#helpModal">
                    What?
                  </a>
                </small>
              </h3>

              <div id="wait" class="row">
                <div class="spinner">
                  <div class="rect1"></div>
                  <div class="rect2"></div>
                  <div class="rect3"></div>
                  <div class="rect4"></div>
                  <div class="rect5"></div>
                </div>
                Loading...
              </div>

              <form id="upload_form" style="display: none;" method="POST" enctype="multipart/form-data" action="api/document/upload">
                <fieldset>
                  <input id='file' type="file" name="d" />
                  <button id="upload_submit" style="display: none;" type="submit" class="btn btn-success">
                    <i class="glyphicon glyphicon-file"></i> Upload
                  </button>
                </fieldset>

              </form>

              <div id="filedrag" style="display: none;" class="dropbox">
                Click here or drag and drop your document in the box.
                <br /> The file will NOT be uploaded. The cryptographic proof is calculated client-side.
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <hr />
              <div id="explain"></div>
              <div id="hash-progress" class="progress" style="display: none">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                </div>
              </div>
              <p class="text-center">
                <small>
                <a id="digest-link" href="#" style="display: none">
                  Click here if you're not redirected.
                </a>
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="header">
          <h4 class="title">Submissions</h4>
          <p class="category">Documents registered for verification</p>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-striped" id="latest">
            </table>
          </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="header">
          <h4 class="title">Verifications</h4>
          <p class="category">Documents confirmed in the blockchain</p>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-striped" id="latest_confirmed">
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
